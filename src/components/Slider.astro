---
import SwiperCarousel from "../assets/SwiperCarousel.astro"
import { useTranslations } from "../i18n/util";
import { languages } from "../i18n/ui";
const currentLang = Astro.currentLocale || "es";
const translateLabels = useTranslations(currentLang as keyof typeof languages);

const localizedLink = (path: string) => {
  if (currentLang === "es") return path;
  return `/${currentLang}${path}`;
};
---
<section class="grid grid-cols-12 px-5 lg:px-10 gap-4 relative w-full py-10 lg:py-20">


    <article class="mt-10 col-start-1 lg:col-start-2 col-span-12 lg:col-span-4 flex flex-col gap-4">
        <h3 class="text-blue text-[12px] lg:text-[16px] font-semibold">{translateLabels("slider.accent")}</h3>
        <h2 class="text-2xl lg:text-[40px] leading-12">{translateLabels("slider.title")} <span class="font-bold">{translateLabels("slider.titleBold")}</span></h2>
        <p class="text-[14px] lg:text-[16px] text-gray font-inter">
            {translateLabels("slider.text")}
        </p>
    </article>
    <article class=" col-start-1 lg:col-start-7 col-span-12 lg:col-span-7">
        <SwiperCarousel />
    </article>
</section>
