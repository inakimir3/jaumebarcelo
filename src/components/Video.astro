        </div>
    </article>
</section>

<!-- MODAL VIDEO -->
<div 
    id="video-modal"
    class="fixed inset-0 bg-black/80 backdrop-blur-sm flex justify-center items-center z-50 hidden"
>
    <div class="relative w-full max-w-4xl px-4">
        <button 
            id="close-video" 
            class="absolute top-0 cursor-pointer right-0 text-white text-3xl font-bold"
        >
            âœ•
        </button>

        <video 
            id="video-player"
            src="videos/video.MP4" 
            controls 
            autoplay
            class="w-full max-h-[90vh] rounded-2xl"
        ></video>
    </div>
</div>

<script>
    const modal = document.getElementById("video-modal");
    const open1 = document.getElementById("open-video");
    const open2 = document.getElementById("open-video-btn");
    const close = document.getElementById("close-video");
    const video = document.getElementById("video-player");
    video.pause();


    function openModal() {
        modal.classList.remove("hidden");
        video.currentTime = 0;
        video.play();
        document.body.style.overflow = "hidden"; // bloquea scroll
    }

    function closeModal() {
        modal.classList.add("hidden");
        video.pause();
        document.body.style.overflow = "auto";
    }

    open1.addEventListener("click", openModal);
    open2.addEventListener("click", openModal);
    close.addEventListener("click", closeModal);

    // Cerrar si clicas fuera del video
    modal.addEventListener("click", (e) => {
        if (e.target === modal) closeModal();
    });
</script>
