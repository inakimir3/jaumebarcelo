<section class="grid grid-cols-12 px-5 lg:px-10 gap-4 relative w-full">

    <article 
        class="lg:-mt-10 w-full aspect-6/4 relative col-start-1 lg:col-start-2 col-span-12 lg:col-span-5 rounded-xl overflow-hidden cursor-pointer"
        id="open-video"
    >
        <img src="images/icon/play.svg" class="w-16 absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2"/>
        <img src="images/jaume2.webp" class="w-full aspect-6/4 rounded-xl object-cover"/>
    </article>

    <article class="mt-10 col-start-1 lg:col-start-8 col-span-12 lg:col-span-3 flex flex-col gap-4">
        <h3 class="text-blue text-[12px] lg:text-[16px] font-semibold">Watch video</h3>
        <h2 class="text-2xl lg:text-[40px] leading-12">Improving Skills <br><span class="font-bold">Easier Than Ever</span></h2>
